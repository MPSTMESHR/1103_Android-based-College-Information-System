<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/change_pass_xml">"

    <EditText
        android:id="@+id/editTold1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter old password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTold2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTold1"
        android:layout_below="@+id/editTold1"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter new password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTnewpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTold2"
        android:layout_below="@+id/editTold2"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="Re-enter new password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTnewpass"
        android:layout_below="@+id/editTnewpass"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="57dp"
        android:text="Submit" />

</RelativeLayout>
